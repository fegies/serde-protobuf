    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'serde-protobuf'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=serde-protobuf"
                ],
                "filter": {
                    "name": "serde-protobuf",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'lib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=lib",
                    "--package=serde-protobuf"
                ],
                "filter": {
                    "name": "lib",
                    "kind": "test"
                },
                "env": {
                    "RUSTFLAGS": "-g"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}